<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".question_popup">

    <androidx.cardview.widget.CardView
        android:layout_gravity="center"
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/otp_box"
        app:cardCornerRadius="10dp"
        >
        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:src="@drawable/ic_baseline_close_24"
                android:clickable="true"
                />
            <TextView
                android:id="@+id/one_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="One line discription of question"
                android:textSize="20sp"
                />
            <TextView
                android:id="@+id/mul_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Detailed discripion of the problem"
                android:textSize="10sp"
                />
            <TextView
                android:id="@+id/datenrew"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="date and rewards"/>
            <Button
                android:id="@+id/startsolving"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="10dp"
                android:layout_marginHorizontal="130dp"
                android:background="@drawable/button_state"
                android:text="Start Solving"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.appcompat.widget.LinearLayoutCompat>