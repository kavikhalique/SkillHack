<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_light"
    tools:context=".Admin.AdminLoginPage">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/heading_backscreen"
            >

            <ImageView
                android:id="@+id/logoad"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/main_logo" />

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Admin Login"
            android:fontFamily="@font/baloo_bhaijaan"
            android:textSize="35sp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:text="Login Via your Mobile number."
            android:gravity="center"
            android:fontFamily="@font/baloo_bhaijaan"
            android:textSize="15sp"

            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="60dp"
            android:gravity="center"
            android:background="@drawable/otp_box"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="+91-"
                android:textSize="16sp"
                android:gravity="center"
                android:textStyle="bold"
                />
            <EditText
                android:id="@+id/admin_phone"
                android:layout_width="wrap_content"
                android:layout_height="50dp"

                android:background="@null"
                android:hint="@string/mobile_number"
                android:maxLength="10"
                android:fontFamily="@font/baloo_bhaijaan"
                android:textColorHint="@color/hint_color"
                android:imeOptions="actionDone"
                android:importantForAutofill="no"
                android:textSize="16sp"
                />

        </LinearLayout>


        <Button

            android:id="@+id/btnAdmOtp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="70dp"
            android:text="get OTP"
            android:textColor="@color/base"
            android:background="@drawable/custom_button"
            android:visibility="visible"
            android:textStyle="bold"
            />


        <EditText
            android:id="@+id/input_pin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/otp_box"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="60dp"
            android:hint="Enter otp here"
            android:maxLength="4"
            android:fontFamily="@font/baloo_bhaijaan"
            android:gravity="center"
            android:visibility="invisible"
            android:textColorHint="@color/hint_color"

            />

        <Button

            android:id="@+id/adminVerify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="70dp"
            android:text="verify"
            android:textColor="@color/base"
            android:visibility="invisible"
            android:background="@drawable/custom_button"
            android:textStyle="bold"
            />



    </LinearLayout>

</LinearLayout>