<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_light"
    tools:context=".VerificationOTP">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/heading_backscreen"
            >

            <ImageView
                android:id="@+id/logo"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/main_logo" />

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:src="@drawable/dasboardperson" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name of User"
            android:fontFamily="@font/baloo_bhaijaan"
            android:textSize="20sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile Number of User"
            android:fontFamily="@font/baloo_bhaijaan"
            android:textSize="20sp"
            />
    </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:orientation="vertical"
                android:background="@drawable/box">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Problems Solved"
                    android:layout_marginTop="15dp"
                    android:layout_marginHorizontal="30dp"
                    android:fontFamily="@font/baloo_bhaijaan"

                    />
                <TextView
                    android:id="@+id/NoProblemSolved"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"

                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginHorizontal="75dp"
                    android:textSize="30sp"
                    android:fontFamily="@font/baloo_bhaijaan"

                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:orientation="vertical"
                android:background="@drawable/box">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Reward"
                    android:layout_marginTop="15dp"
                    android:layout_marginHorizontal="40dp"
                    android:fontFamily="@font/baloo_bhaijaan"

                    />
                <TextView
                    android:id="@+id/cnt_rwd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"

                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginHorizontal="75dp"
                    android:textSize="30sp"
                    android:fontFamily="@font/baloo_bhaijaan"

                    />

            </LinearLayout>



        </LinearLayout>
    <TextView
        android:id="@+id/contactUs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Us"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:textColor="@color/linkColor"

        />
    <View
        android:layout_width="70dp"
        android:layout_height="1dp"
        android:background="@color/linkColor"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:id="@+id/TandC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Terms &amp; Conditions"
        android:layout_marginStart="30dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/linkColor"

        />
    <View
        android:layout_width="124dp"
        android:layout_height="1dp"
        android:background="@color/linkColor"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:id="@+id/Logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log Out"
        android:layout_marginStart="30dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/linkColor"

        />
    <View
        android:layout_width="50dp"
        android:layout_height="1dp"
        android:background="@color/linkColor"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="20dp"/>


</LinearLayout>